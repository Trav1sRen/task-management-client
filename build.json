{
  "plugins": [
    [
      "build-plugin-fusion",
      {
        "themePackage": "@alifd/theme-design-pro"
      }
    ],
    [
      "build-plugin-moment-locales",
      {
        "locales": [
          "en-us"
        ]
      }
    ]
  ],
  "cssLoaderOptions": {
    "modules": {
      "auto": true,
      "localIdentName": "[hash:base64:7]"
    },
    "localsConvention": "dashes"
  }
}
